{{! views/locationResult.handlebars }}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Location Result</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    <div class="container d-flex flex-column justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
            <h2 class="text-center mb-4">Location Details</h2>
            
            {{#if locationData}}
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>ZIP Code:</strong> {{locationData.cep}}</li>
                    <li class="list-group-item"><strong>City:</strong> {{locationData.localidade}}</li>
                    <li class="list-group-item"><strong>State:</strong> {{locationData.uf}}</li>
                    <li class="list-group-item"><strong>Street:</strong> {{locationData.logradouro}}</li>
                    <li class="list-group-item"><strong>Neighborhood:</strong> {{locationData.bairro}}</li>
                </ul>
            {{else}}
                <p class="text-center text-danger">No data available. Please try again.</p>
                <a href="/"></a>
            {{/if}}
            
            <div class="text-center mt-4">
                <a href="/" class="btn btn-primary">Search Again</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
